{
  "name": "@thepokencompany/ui",
  "version": "0.8.8",
  "description": "React UI component library built with Tailwind CSS",
  "repository": "https://github.com/ThePokenCompany/design-system",
  "author": {
    "name": "Ramirez Tristan",
    "email": "tristan.rami@gmail.com"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "lib",
    "config.js",
    "README.md"
  ],
  "scripts": {
    "start": "run-s build:tailwind start:storybook",
    "start:storybook": "start-storybook -p 4000",
    "build": "run-s build:*",
    "build:clean": "rimraf storybook-static lib",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "build:tailwind": "tailwindcss build -i styles/tailwind.css -o styles/output.css -c styles/tailwind.config.js",
    "build:storybook": "build-storybook",
    "prepublishOnly": "yarn build",
    "format": "prettier --write \"**/*.{js,json,scss,md,yml,html}\""
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.4",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addons": "^6.3.7",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.2.9",
    "@types/lodash": "^4.14.175",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "css-loader": "^3.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-scripts": "^4.0.3",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.4",
    "@tailwindcss/forms": "^0.3.2",
    "clsx": "^1.1.1",
    "deepmerge": "4.2.2",
    "lodash": "^4.17.21",
    "popper.js": "^1.16.1",
    "postcss": "^8.2.15",
    "tailwindcss": ">=2.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
